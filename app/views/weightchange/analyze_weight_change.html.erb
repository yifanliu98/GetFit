<style>
  form {
    margin: 0 auto;
    width: 200px;
    padding: 1em;
    border: 0px solid #CCC;
    border-radius: 1em;
  }
  form div + div {
    margin-top: 1em;
  }

  label {
    display: inline-block;
    width: 150px;
    text-align: center;
  }
  input, textarea {
    font: 1em sans-serif;
    width: 150px;
    box-sizing: border-box;
    border: 1px solid #999;
  }
  input:focus, textarea:focus {
    border-color: #000;
  }
  textarea {
    vertical-align: top;
    height: 5em;
  }
  .button {
    padding-left: 90px;
  }
  button {
    margin-left: .5em;
  }


</style>



<br><br><br><br>

<body style="background-color:#87CEEB">
  <h1>Analyze Weight Change</h1> <br>
  <form name="WeightChange" action="/analyzeweightchange/weightchangeresults", method="get">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <label for="Weight">Weight (kg)</label>
    <input type="number" name="Weight" min=1 required=required><br><br>
    <label for="Height">Height (cm)</label>
    <input type="number" name="Height" min=1 required=required><br><br>
    <label for="Age">Age</label>
    <input type="number" name="Age" min=1 max=130 required=required><br><br>
    

    <label for="male">Male</label>
    <input type="radio" name="Gender" id="male" value="male" required=required><br>
    <label for="female">Female</label>
    <input type="radio" name="Gender" id="female" value="female" required=required><br>

    <input type="submit" value="Submit">
  </form>
</body>















